{
  "name": "FerroLang",
  "scopeName": "source.ferrolang",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#specials" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#comments" },
    { "include": "#functions" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.ferrolang",
          "match": "\\b(return)\\b"
        }
      ]
    },

    "specials": {
      "patterns": [
        {
          "name": "keyword.other.foreign.ferrolang",
          "match": "@foreign"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "name": "storage.type.ferrolang",
          "match": "\\b(int|void|String)\\b"
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.ferrolang",
          "match": "\\b(true|false)\\b"
        }
      ]
    },

    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.ferrolang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.ferrolang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.ferrolang",
          "match": "\\b\\d+\\b"
        }
      ]
    },

    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.ferrolang",
          "match": "#.*$"
        }
      ]
    },

    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.ferrolang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },

    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.braces.begin.ferrolang",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.ferrolang",
          "match": "\\}"
        },
        {
          "name": "punctuation.section.parens.begin.ferrolang",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.ferrolang",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.comma.ferrolang",
          "match": ","
        },
        {
          "name": "punctuation.terminator.statement.ferrolang",
          "match": ";"
        },
        {
          "name": "punctuation.varargs.ferrolang",
          "match": "\\.\\.\\."
        }
      ]
    }
  },
  "fileTypes": ["fl"],
  "uuid": "e2f7d4b1-17b1-4b63-95f7-5e4b3d8c1722"
}
